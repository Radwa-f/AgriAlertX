<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:background="@color/white">

    <!-- Top Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/top_background"
        android:scaleType="fitXY"
        android:id="@+id/topImage"
        android:layout_alignParentTop="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topImage"
        android:background="@color/white"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="10dp">


        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_user_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile"
                android:contentDescription="profile"
                android:backgroundTint="@color/my_dark"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!-- User Information -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="16dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/tv_user_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_user_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="16sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_user_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textSize="16sp"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_edit_user_info"
                    android:layout_width="61dp"
                    android:layout_height="56dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit User Info"
                    android:src="@drawable/baseline_edit_note_24"
                    app:tint="@color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- User Location -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/tv_user_location_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_user_location_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City Name"
                        android:textSize="16sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_user_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Latitude, Longitude"
                        android:textSize="16sp"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_edit_location"
                    android:layout_width="61dp"
                    android:layout_height="56dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit User Info"
                    android:src="@drawable/baseline_edit_note_24"
                    app:tint="@color/black"  />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Crops -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/tv_user_crops_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Crops"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_user_crops"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wheat, Corn, Rice"
                        android:textSize="16sp"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_edit_crops"
                    android:layout_width="61dp"
                    android:layout_height="56dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit User Info"
                    android:src="@drawable/baseline_edit_note_24"
                    app:tint="@color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
</RelativeLayout>