<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabIndicatorHeight">6dp</item> <!-- Adjust indicator size if needed -->
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item> <!-- Increase tab text size -->
        <item name="android:textColor">@color/my_dark</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.AgriAlertX" parent="Theme.Material3.Light.NoActionBar" />

    <!-- Rounded shape for header image -->
    <style name="Shape.Rounded16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>